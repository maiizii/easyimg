# 监听端口，默认为 3000
PORT=3000

# 运行环境
NODE_ENV=production

# 允许的前端来源（多个用逗号分隔），留空代表不限制
ALLOWED_ORIGINS=

# 是否自动放行与当前访问 Host 相同的来源（默认 true）
ALLOW_SAME_HOST_ORIGIN=true

# 访问密码：用于进入前端「API 接口」页面生成专属密钥
API_PAGE_PASSWORD=

# 可选：API 密钥签名密钥。配置后每个客户端的专属密钥会在重启后保持不变
# 若留空，则默认使用 API_PAGE_PASSWORD 派生，未设置密码时会生成临时密钥（重启后需要重新生成密钥）
API_KEY_SECRET=

# 可选：指定前端静态文件所在目录，便于后端自动托管
# 支持相对路径（相对于 server.js 所在目录）或绝对路径
#FRONTEND_DIST_DIR=..

# 可选：上传目录（默认 server/uploads）
#UPLOAD_DIR=uploads
