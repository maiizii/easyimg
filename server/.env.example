# 监听端口，默认为 3000
PORT=3000

# 运行环境
NODE_ENV=production

# 允许的前端来源（多个用逗号分隔），留空代表不限制
ALLOWED_ORIGINS=

# 是否自动放行与当前访问 Host 相同的来源（默认 true）
ALLOW_SAME_HOST_ORIGIN=true

# 访问密码：用于在前端生成专属密钥
API_PAGE_PASSWORD=

# 管理员后台密码：访问 /admin 管理页面时需要输入，留空则禁用管理员功能
ADMIN_PASSWORD=

# 可选：指定前端静态文件所在目录，便于后端自动托管
# 支持相对路径（相对于 server.js 所在目录）或绝对路径
FRONTEND_DIST_DIR=../www

# 可选：上传目录（默认 server/uploads）
#UPLOAD_DIR=uploads
