# 监听端口，默认为 3000
PORT=3000

# 运行环境
NODE_ENV=production

# 允许的前端来源（多个用逗号分隔），留空代表不限制
ALLOWED_ORIGINS=

# 是否自动放行与当前访问 Host 相同的来源（默认 true）
ALLOW_SAME_HOST_ORIGIN=true

# API 密钥（单个或多个，用逗号分隔）。配置后所有受保护接口都需要在请求头中携带 X-API-Key
API_KEY=
# 或使用复数形式写多个密钥：
API_KEYS=

# 若开启了 API 密钥管理页面，需要设置访问密码
API_PAGE_PASSWORD=

# 可选：指定前端静态文件所在目录，便于后端自动托管
# 支持相对路径（相对于 server.js 所在目录）或绝对路径
#FRONTEND_DIST_DIR=..

# 可选：上传目录（默认 server/uploads）
#UPLOAD_DIR=uploads
